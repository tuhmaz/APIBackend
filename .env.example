# ==============================================
# Application Configuration
# ==============================================
APP_NAME="My Website"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://api.alemancenter.com
APP_TIMEZONE=UTC
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ar_SA

# Generate new key with: php artisan key:generate
APP_KEY=

# ==============================================
# Logging Configuration
# ==============================================
LOG_CHANNEL=stack
LOG_LEVEL=error

# ==============================================
# CORS Configuration
# ==============================================
# Allowed origins are configured in app/Http/Middleware/Cors.php
CORS_SUPPORTS_CREDENTIALS=true

# ==============================================
# Database Configuration
# ==============================================
# Main database connection (Jordan)
DB_CONNECTION=jo
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=alhurani_jo
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password

# Saudi Arabia Database
DB_HOST_sa=127.0.0.1
DB_PORT_sa=3306
DB_DATABASE_sa=admin_SA_data
DB_USERNAME_sa=your_db_user
DB_PASSWORD_sa=your_secure_password

# Egypt Database
DB_HOST_eg=127.0.0.1
DB_PORT_eg=3306
DB_DATABASE_eg=admin_EG_data
DB_USERNAME_eg=your_db_user
DB_PASSWORD_eg=your_secure_password

# Palestine Database
DB_HOST_ps=127.0.0.1
DB_PORT_ps=3306
DB_DATABASE_ps=admin_PS_data
DB_USERNAME_ps=your_db_user
DB_PASSWORD_ps=your_secure_password

# ==============================================
# Redis Configuration
# ==============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# Generate secure password with: openssl rand -base64 32
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# ==============================================
# Cache Configuration
# ==============================================
CACHE_DRIVER=redis
CACHE_PREFIX=alemancenter_cache

# ==============================================
# Session Configuration
# ==============================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.alemancenter.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ==============================================
# Queue Configuration
# ==============================================
QUEUE_CONNECTION=redis

# ==============================================
# Mail Configuration
# ==============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_secure_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@alemancenter.com
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================
# Google OAuth Configuration
# ==============================================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://api.alemancenter.com/api/auth/google/callback

# ==============================================
# OneSignal Push Notifications
# ==============================================
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# ==============================================
# File Storage Configuration
# ==============================================
FILESYSTEM_DISK=public
# For AWS S3 (optional):
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ==============================================
# Security Configuration
# ==============================================
# Enable HSTS header (recommended for production)
APP_ADD_HSTS=true

# API Key for external integrations (generate with: openssl rand -hex 32)
API_KEY=

# ==============================================
# Frontend API Protection
# ==============================================
# Secret key shared with frontend (generate with: openssl rand -hex 32)
FRONTEND_API_KEY=

# Allowed origins for API access (comma-separated)
ALLOWED_ORIGINS=https://alemancenter.com,https://www.alemancenter.com

# Rate limiting for frontend API
FRONTEND_RATE_LIMIT=true
FRONTEND_RATE_LIMIT_MAX=100
FRONTEND_RATE_LIMIT_WINDOW=60

# Log unauthorized API access attempts
LOG_UNAUTHORIZED_API_ACCESS=true

# ==============================================
# Rate Limiting Configuration
# ==============================================
# Max login attempts per minute
LOGIN_RATE_LIMIT=5

# Max API requests per minute
API_RATE_LIMIT=60

# ==============================================
# Frontend Configuration
# ==============================================
FRONTEND_URL=https://alemancenter.com

# ==============================================
# Broadcasting Configuration
# ==============================================
BROADCAST_DRIVER=log
# For production use Redis/Pusher:
# BROADCAST_DRIVER=pusher
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_APP_CLUSTER=mt1

# ==============================================
# Sanctum Configuration
# ==============================================
SANCTUM_STATEFUL_DOMAINS=alemancenter.com,www.alemancenter.com,localhost:3000
